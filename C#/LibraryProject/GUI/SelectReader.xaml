        <Label  Content="Поиск" HorizontalAlignment="Left" Height="30" Margin="39,50,0,0" VerticalAlignment="Top" Width="71" FontSize="16"/>
        <TextBox Name="tb" HorizontalAlignment="Left" Height="30" Margin="144,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="421" FontSize="16" TextChanged="TextBox_TextChanged"/>
        <Button Name="b" Content="Выбрать" HorizontalAlignment="Left" Height="30" Margin="591,50,0,0" VerticalAlignment="Top" Width="122" Click="B_Click" RenderTransformOrigin="0.212,0.74" FontSize="16"/>
