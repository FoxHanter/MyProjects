<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Библиотека" Height="450" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Button Name="NewReaderButton" Content="Зарегистрировать читателя" HorizontalAlignment="Left" Height="50" Margin="300,60,0,0" VerticalAlignment="Top" Width="224" Click="NewReaderButton_Click"/>
        <Button Name="NewBookButton" Content="Добавить книгу" HorizontalAlignment="Left" Height="50" Margin="300,120,0,0" VerticalAlignment="Top" Width="224" Click="NewBookButton_Click"/>
        <Button Name="GiveBookButton" Content="Выдать книгу" HorizontalAlignment="Left" Height="50" Margin="300,180,0,0" VerticalAlignment="Top" Width="224" Click="GiveBookButton_Click"/>
        <Button Name="TakeBookButton" Content="Вернуть книгу" HorizontalAlignment="Left" Height="50" Margin="300,240,0,0" VerticalAlignment="Top" Width="224" Click="TakeBookButton_Click"/>

    </Grid>
</Window>
